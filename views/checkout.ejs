<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script
      src="https://kit.fontawesome.com/85aaa41db7.js"
      crossorigin="anonymous"
    ></script>
    <title>Cart</title>
    <link rel="stylesheet" href="/css/style.css" />

    <style>
      /* Add some padding and margin to the page */
      body {
        padding: 20px;
        margin: 0;
        
      }

      .center{
        text-align: center;
        width: 50%;
        margin-left: 330px;
      }
      /* Add a background color and some padding to the sections */
      #delivery-address,
      #payment-method,
      #review-items {
        text-align: center;
        background-color: #f4f4f4;
        padding: 20px;
      }

      .btn{
        background-color: #3e8e41;
        margin: 20px;
      }

      .img{
        width: 100px;
        height: 80px;
      }

      /* Center the text and add some margin to the headers */
      h2 {
        text-align: center;
        margin-bottom: 20px;
      }

      /* Add some margin to the form elements */
      form {
        margin-bottom: 20px;
      }

      /* Add some margin and padding to the table */
      table {
        margin: 0 auto;
        padding: 20px;
      }

      /* Add some styling to the table cells */
      th,
      td {
        padding: 10px;
        border: 1px solid black;
      }

      /* Add some hover effect to the table rows */
      tr:hover {
        background-color: #ddd;
      }

      #total-amount {
        text-align: center;
        font-weight: bold;
        margin: 20px 0px;
      }

    #place-order-btn {
        background-color: #4CAF50; /* Green */
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin: 0 auto;
        display: block;
    }

    #place-order-btn:hover {
        background-color: #3e8e41;
    }
    </style>

  </head>
  <body>
        <%- include('partials/header')%>

        <div class="center">

        <div id="delivery-address">

          <h2>Select a Delivery Address</h2>

          <form>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" /><br /><br />
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" /><br /><br />
            <label for="pin-code">Pin Code:</label>
            <input type="text" id="pin-code" name="pin-code" /><br /><br />
            <label for="phone-number">Phone Number:</label>
            <input
              type="text"
              id="phone-number"
              name="phone-number"
            /><br>
            <input class="btn" type="submit" value="Save Address" />
          </form>

        </div>



        <div id="payment-method">
          <h2>Select a Payment Method</h2>
          <form>
            <input
              type="radio"
              id="credit-debit-card"
              name="payment-method"
              value="credit-debit-card"
            />
            <label for="credit-debit-card">Credit/Debit Card</label><br />
            <input
              type="radio"
              id="cash-on-delivery"
              name="payment-method"
              value="cash-on-delivery"
            />
            <label for="cash-on-delivery">Cash on Delivery</label><br />
            <input
              type="radio"
              id="upi"
              name="payment-method"
              value="upi"
            />
            <label for="upi">UPI</label><br />
          </form>
        </div>

        <div id="review-items">

            <h2>Review Items and Delivery</h2>

            <table>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <!-- <th>Delivery Date/Time</th> -->
              </tr>


                <% finalOrders.forEach(function(item){ %> 
                    <% item = item.order %> 
              <tr>
                <td><img src="<%= item.imgUrl %>" class="img" alt="Items"></td>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <!-- <td>January 23, 2023 at 2:00 PM</td> -->
              </tr>

              <% }); %>

            </table>

            <div id="total-amount">Total Amount: <%= totSum %> </div>
            <a href="/success"><button id="place-order-btn">Place Your Order</button></a>

          </div>
        </div>


  </body>
</html>
