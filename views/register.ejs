    ></script>
    <title>Register!</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('partials/header')%>
    <section class="register" id="register">
      <div
        style="
          text-align: center;
          color: white;
          margin-top: 100px;
          background-color: transparent;
          font-size: 30px;
          margin-left: 10%;
        "
        class="reg-form searchd-form"
      >
        <h1>Register</h1>
        <form action="/register" method="post">
          <div class="content">
            <div style="margin-top: 15px" class="input-field">
              <input
                style="
                  background-color: transparent;
                  font-size: 20px;
                  color: white;
                "
                type="text"
                name="name"
                placeholder="Firstname"
                id="java"
              />
            </div>
            <div style="margin-top: 15px" class="input-field">
              <input
                style="
                  background-color: transparent;
                  font-size: 20px;
                  color: white;
                "
                type="email"
                name="email"
                placeholder="Email"
              />
            </div>
            <div style="margin-top: 15px" class="input-field">
              <input
                style="
                  background-color: transparent;
                  font-size: 20px;
                  color: white;
                "
                type="password"
                name="password"
                placeholder="Password"
              />
            </div>
          </div>
          <div style="font-size: 20px; margin-top: 20px" class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="flexCheckChecked"
              checked
            />
            <label class="form-check-label" for="flexCheckChecked">
              Accept Terms and Conditions
            </label>
          </div>
          <div class="action">
            <button
              style="
                border-width: 1px;
                border-style: solid;
                border-color: white;
                background-color: transparent;
                color: white;
                font-size: 20px;
                margin-top: 20px;
                padding: 10px 20px 10px 20px;
              "
              type="submit"
            >
              Sign in
            </button>
          </div>
          <div style="color: white; font-size: 15px; margin-top: 10px">
            <a href="/login">Already Have An Account? Login Here!</a>
          </div>
        </form>
      </div>
      <div style="align-items: center; margin-left: 62%; margin-top: 50%">
        <a
          href="https://www.freepik.com/free-photo/front-view-delicious-chocolate-cake-stand-with-copy-space_12248182.htm#query=bakery%20background&position=6&from_view=keyword"
          >Image by Freepik</a
        >
      </div>
    </section>
